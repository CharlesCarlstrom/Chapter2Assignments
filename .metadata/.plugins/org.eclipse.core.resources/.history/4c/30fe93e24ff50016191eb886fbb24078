package rockPaperScissors;

import java.util.Random;

import javax.swing.JOptionPane;
/**
 * @author CC113884
 *
 */
public class RockPaperScissors {

	/**
	 * @param args
	 */
	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		int user;
		int computer;
		String msg;
		String userPick;
		String computerPick;
		final int low = 0;
		final int high = 2;
		Random r = new Random(0);
		computer = r.nextInt(2);
		{
		user = Integer.parseInt(JOptionPane.showInputDialog(null, "type the following numbers \n0 for rock \n1 for paper and \n2 for scissors"));
		
		if(user == 0 || computer == 0) 
			msg = "Tie";
		if(user == 1 || computer == 1)  
			msg = "Tie";
		if(user == 2 || computer == 2)
			msg = "Tie";
		
		if(user == 0 || computer == 1) 
			msg = "Computer Wins";
		if(user == 1 || computer == 2) 
			msg = "Computer Wins";
		if(user == 2 || computer == 0)
			msg = "Computer Wins";
			
		if(user == 0 || computer == 2) 
			msg = "User Wins";
		if(user == 1 || computer == 0) 
			msg = "User Wins";
		if(user == 2 || computer == 1)
			msg = "User Wins";
		}
		{
		JOptionPane.showMessageDialog(null, msg);
		}
		
	}

}
